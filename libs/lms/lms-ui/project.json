{
  "name": "lms-ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/lms/lms-ui/src",
  "prefix": "playground",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/lms/lms-ui"],
      "options": {
        "jestConfig": "libs/lms/lms-ui/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/lms/lms-ui/**/*.ts",
          "libs/lms/lms-ui/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/lms/lms-ui/.storybook",
        "browserTarget": "lms-ui:build-storybook",
        "compodoc": false,
        "styles": ["libs/play-ui/.storybook/styles.scss"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/lms-ui",
        "configDir": "libs/lms/lms-ui/.storybook",
        "browserTarget": "lms-ui:build-storybook",
        "compodoc": false,
        "styles": ["libs/play-ui/.storybook/styles.scss"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": ["type:ui"]
}
