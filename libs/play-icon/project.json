{
  "projectType": "library",
  "root": "libs/play-icon",
  "sourceRoot": "libs/play-icon/src",
  "prefix": "dev-playground",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/play-icon"],
      "options": {
        "jestConfig": "libs/play-icon/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/play-icon/src/**/*.ts",
          "libs/play-icon/src/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/angular",
        "port": 4400,
        "config": {
          "configFolder": "libs/play-icon/.storybook"
        },
        "projectBuildConfig": "play-icon:build-storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "uiFramework": "@storybook/angular",
        "outputPath": "dist/storybook/play-icon",
        "config": {
          "configFolder": "libs/play-icon/.storybook"
        },
        "projectBuildConfig": "play-icon:build-storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": ["scope:angular", "type:ui"]
}
