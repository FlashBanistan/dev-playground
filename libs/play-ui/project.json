{
  "name": "play-ui",
  "$schema": "..\\..\\node_modules\\nx\\schemas\\project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/play-ui/src",
  "prefix": "playground",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/play-ui"],
      "options": {
        "jestConfig": "libs/play-ui/jest.config.ts",
        "passWithNoTests": true,
        "tsConfig": "libs/play-ui/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/play-ui/src/**/*.ts",
          "libs/play-ui/src/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/play-ui/.storybook",
        "browserTarget": "play-ui:build-storybook",
        "compodoc": false,
        "styles": ["libs/play-ui/.storybook/styles.scss"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputDir": "dist/storybook/playground-ui",
        "configDir": "libs/play-ui/.storybook",
        "browserTarget": "play-ui:build-storybook",
        "compodoc": false,
        "styles": ["libs/play-ui/.storybook/styles.scss"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": ["type:ui"]
}
