{
  "name": "kalshi-features",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/kalshi/kalshi-features/src",
  "prefix": "playground",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/kalshi/kalshi-features/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/kalshi/kalshi-features/**/*.ts",
          "libs/kalshi/kalshi-features/**/*.html"
        ]
      }
    }
  },
  "tags": ["type:feature"]
}
