{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "noPropertyAccessFromIndexSignature": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cardly/cardly-features": ["libs/cardly/cardly-features/src/lib/index.ts"],
      "@playground/cardly-data": ["libs/cardly/cardly-data/src/index.ts"],
      "@playground/cardly-ui": ["libs/cardly/cardly-ui/src/index.ts"],
      "@playground/cardly-util": ["libs/cardly/cardly-util/src/index.ts"],
      "@playground/environment": ["libs/environment/src/index.ts"],
      "@playground/lms-data": ["libs/lms/lms-data/src/index.ts"],
      "@playground/lms-features": ["libs/lms/lms-features/src/index.ts"],
      "@playground/lms-ui": ["libs/lms/lms-ui/src/index.ts"],
      "@playground/lms-util": ["libs/lms/lms-util/src/index.ts"],
      "@playground/play-storybook": ["libs/play-storybook/src/index.ts"],
      "@playground/play-ui": ["libs/play-ui/src/index.ts"],
      "@playground/shared/shared-data": ["libs/shared/shared-data/src/index.ts"],
      "@playground/shared/shared-features": ["libs/shared/shared-features/src/index.ts"],
      "@playground/shared/util/array": ["libs/shared/shared-util/src/lib/array-util/index.ts"],
      "@playground/shared/util/id": ["libs/shared/shared-util/src/lib/id-util/index.ts"],
      "@playground/shared/util/mobile": ["libs/shared/shared-util/src/lib/mobile-util/index.ts"],
      "@playground/shared/util/pagination": ["libs/shared/shared-util/src/lib/pagination-util/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
