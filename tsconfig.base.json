{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noPropertyAccessFromIndexSignature": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@playground/environment": ["libs/environment/src/index.ts"],
      "@playground/play-lms/play-lms-data": [
        "libs/play-lms/play-lms-data/src/index.ts"
      ],
      "@playground/play-lms/play-lms-features": [
        "libs/play-lms/play-lms-features/src/index.ts"
      ],
      "@playground/play-lms/play-lms-ui": [
        "libs/play-lms/play-lms-ui/src/index.ts"
      ],
      "@playground/play-ui": ["libs/play-ui/src/index.ts"],
      "@playground/storybook": ["libs/storybook/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
